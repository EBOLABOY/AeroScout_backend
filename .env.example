# Ticketradar 环境变量配置
# 复制此文件为 .env 并填入实际值

# FastAPI settings
DEBUG=true
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO
SERVER_HOST=0.0.0.0
SERVER_PORT=38181

# Database (fallback)
DATABASE_URL=sqlite:///./ticketradar.db

# Supabase (database and auth)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_DATABASE_URL=
SUPABASE_JWT_SECRET=

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Service (OpenAI-compatible endpoint)
AI_API_KEY=
AI_API_URL=http://154.19.184.12:3000/v1
AI_MODEL_AUTHENTICATED=gemini-2.5-pro

# Site (for auth callbacks)
SITE_URL=http://localhost:3000
# Production example: https://ticketradar.izlx.de

# Legacy JWT (optional fallback)
JWT_SECRET_KEY=change-me
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitor & notifications
MONITOR_INTERVAL_MINUTES=30
FIXED_CRAWL_INTERVAL_MINUTES=30
FIXED_CRAWL_CITY_DELAY_SECONDS=5
NOTIFICATION_COOLDOWN=24

# Data save options
SAVE_FLIGHT_DATA=false

# Google OAuth (if used via Supabase)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
