# Ticketradar环境变量配置
# 复制此文件为 .env 并填入实际值

# === 必需配置 ===

# 应用密钥
SECRET_KEY=your-secret-key-here

# Supabase 数据库和认证配置（必填）
SUPABASE_URL=https://guecfssgxqhxyxyxjobg.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# AI 服务配置（必填）
AI_API_KEY=your-ai-api-key-here
AI_API_URL=http://154.19.184.12:3000/v1
AI_MODEL_AUTHENTICATED=gemini-2.5-pro

# 缓存配置（必填）
REDIS_URL=redis://localhost:6379/0

# 网站配置（用于邮件回调）
SITE_URL=http://localhost:3000
# 生产环境示例：SITE_URL=https://ticketradar.izlx.de

# === 可选配置 ===

# 开发模式（默认 True）
DEBUG=True

# 日志级别（默认 INFO）
LOG_LEVEL=INFO

# Google OAuth配置（在Supabase Dashboard中配置）
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 通知冷却时间（小时，默认24小时）
NOTIFICATION_COOLDOWN=24

# 数据保存配置（默认关闭）
SAVE_FLIGHT_DATA=false